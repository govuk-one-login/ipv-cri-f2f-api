{
  "$schema": "https://raw.githubusercontent.com/govuk-one-login/quality-gates/refs/tags/v0.2.0/schemas/schema.json",
  "services": [
    {
      "service-tag": "f2f-api",
      "quality-gates": [
        {
          "check-types": ["secret scanning"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pre-commit.yml",
            "path": "jobs.pre-commit"
          }
        },
        {
          "check-types": ["code style and linting", "unit", "contract"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pull-request.yml",
            "path": "jobs.run-code-check",
            "name": "Code Checks"
          }
        },
        {
          "check-types": ["code style and linting"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pull-request.yml",
            "path": "jobs.sam-validate",
            "name": "SAM Validate"
          }
        },
        {
          "check-types": ["regression", "stack", "integration"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pull-request.yml",
            "path": "jobs.pre-merge-checks"
          }
        }, 
        {
          "check-types": ["unit"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pull-request-sonar.yml",
            "path": "jobs.unit-tests"
          }
        },
        {
          "check-types": ["unit test coverage", "code quality"],
          "provider": "GitHub",
          "phase": "pre-merge",
          "config": {
            "file": ".github/workflows/pull-request-sonar.yml",
            "path": "jobs.run-sonar-pr",
            "name": "run-sonar-pr"
          }
        }
      ]
    }
  ]
}